<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/main_navigation"
            app:startDestination="@id/oneFragment">

    <fragment android:id="@+id/oneFragment"
              android:name="com.example.m.myapplication.one.FirstFragment"
              android:label="fragment_plus_one"
              tools:layout="@layout/fragment_one_first">
        <action android:id="@+id/action_second"
                app:destination="@id/twoSecondFragment"/>
                <!--app:launchSingleTop="true"-->
        <deepLink app:uri="http://www.one.com/first/{arg}" android:autoVerify="true"/>
        <argument android:name="arg" app:argType="string"/>

    </fragment>

    <fragment android:id="@+id/twoSecondFragment"
              android:name="com.example.m.myapplication.one.SecondFragment"
              android:label="fragment_blank_second"
              tools:layout="@layout/fragment_second">
    <deepLink app:uri="http://www.one.com/second/{arg}" android:autoVerify="true"/>
        <argument android:name="arg" app:argType="string"/>
    </fragment>
</navigation>